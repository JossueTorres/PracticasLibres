<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="5dp"
            android:text="CICLO"
            android:textAlignment="center"
            android:textSize="18sp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/edtCiclo_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="Código"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtCiclo_ciclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="Ciclo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtCiclo_fechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fecha de inicio"
            android:inputType="date" />

        <EditText
            android:id="@+id/edtCiclo_fechaFinalizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fecha de finalización"
            android:inputType="date" />

        <Switch
            android:id="@+id/swCiclo_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado Activo" />

        <Button
            android:id="@+id/btnCiclo_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cancelar"
            android:text="cancelar" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>